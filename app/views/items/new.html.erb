<h1>Generate New Items Here!</h1>

<%= form_with model: @item, local: true, class: "new_items" do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br><br>
  <%= f.label :description %><br>
  <%= f.text_area :description, size: "60x12" %><br><br>
  <%= f.label :price %><br>
  <%= f.text_field :price %><br><br>
  <%= f.label :location %><br>
  <%= f.text_field :location %><br><br>
  <%= f.label :picture %><br>
  <%= f.file_field :picture %><br><br>
  <%= f.submit "create"%>
  
<% end %>